<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wh_160"
    android:background="@drawable/camera_item_control_btn">

    <ImageView
        android:id="@+id/iv_panel_func"
        android:layout_width="@dimen/wh_48"
        android:layout_height="@dimen/wh_48"
        android:layout_alignBottom="@dimen/mg_5"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_panel_func"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_panel_func"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/mg_5"
        android:gravity="center"
        android:textColor="@color/camera_panel_control_color"
        android:textSize="@dimen/ts_13" />
</RelativeLayout>